<UserControl x:Class="AzeriChat.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AzeriChat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="Border" Background="#FF9067F8" CornerRadius="12" >
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 5 0" FontSize="8" FontWeight="Bold" Foreground="#293132" Name="TimeText"></TextBlock>
            <TextBlock Name="DataText" TextWrapping="Wrap" Foreground="Black" FontSize="7" Margin="3 3 0 0"></TextBlock>
        </Grid>
    </Border>
</UserControl>
